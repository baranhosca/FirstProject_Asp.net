@{
    ViewData["Title"] = "Welcome";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <div style="background-color:#ff6a00">
        @DateTime.Now.ToShortDateString()
    </div>
    <br />
    <div style="background-color:#ffd800">
        @for(int i = 1; i <= 10; i++)
        {
            @i
            <br />
        }
    </div>
    <br />
    <br />
    <div style="background-color:#2daf10">
        @{
            var list = new List<string>() { "Torino", "Milano", "Venezia", "Roma", "Verona" };
            int count = 1;
        }
            @foreach (var Li in list)
            {

			<p>@count. @Li </p>
                count++;
            }
    </div>
</div>
